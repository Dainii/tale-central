<div>
  <h1 class="font-bold text-4xl">Home#index</h1>
  <p>Find me in app/views/home/index.html.erb</p>
</div>

<div>
  <label for="search" class="block text-sm/6 font-medium text-gray-900">Quick search</label>
  <div class="mt-2">
    <div class="flex rounded-md bg-white outline-1 -outline-offset-1 outline-gray-300 focus-within:outline-2 focus-within:-outline-offset-2 focus-within:outline-indigo-600">
      <%= form_with(url: search_path, method: :get, data: {controller: 'search', turbo_frame: 'search_results'}) do |form| %>
        <div class="container is-flex">
          <%= form.text_field :query, class: "block min-w-0 grow px-3 py-1.5 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6", data: {action: "input->search#search"} %>
          <div class="flex py-1.5 pr-1.5">
            <%= form.submit "Search", class: "inline-flex items-center rounded-sm border border-gray-200 px-1 font-sans text-xs text-gray-400" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="my-6">
  <%= turbo_frame_tag "search_results" do %>
    <p>Nothing yet...</p>
  <% end %>
</div>
